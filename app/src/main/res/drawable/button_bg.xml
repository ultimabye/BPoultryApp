        <shape>
            <solid android:color="#FF4081" /> <!-- Background color when button is pressed -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FF6699" /> <!-- Default background color -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
        </shape>
    </item>
</selector>